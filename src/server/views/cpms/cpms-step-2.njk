{% extends 'layouts/default.layout.njk' %}

{% set pageTitle = 'DVSA Road Side Payment Portal' %}

{% block content %}
  
  {% call components.gridRow() %}

    {% call components.columnTwoThirds() %}

      {{ components.heading(text='Pay a DVSA Penalty', tag='h1', size='xlarge') }}
			{{ components.heading(text="Billing Address", tag='h2', size='large') }}

			<div class="cpms-m-b-60">
				<form action="{{ urlroot }}/cpms-step-3" method="GET">
					<div class="form-group">
						<input class="form-control" name="amount" value="{{ amount }}" type="text" hidden>
						<input class="form-control" name="cardNumber" value="{{ cardNumber }}" type="text" hidden>
						<input class="form-control" name="expMonth" value="{{ expMonth }}" type="text" hidden>
						<input class="form-control" name="expYear" value="{{ expYear }}" type="text" hidden>
						<label class="form-label-bold" for="card-holder-name">Name on card</label>
						<input class="form-control cpms-full-width" name="cardHolderName" type="text">
					</div>
					<div class="form-group">
						<label class="form-label" for="last-name-2">Street name / Building no.</label>
						<input class="form-control cpms-full-width" name="last-name-2" type="text">
					</div>
					<div class="form-group">
						<label class="form-label" for="last-name-2">Town or City</label>
						<input class="form-control cpms-full-width" name="last-name-2" type="text">
					</div>
					<div class="form-group">
						<label class="form-label" for="last-name-2">Country</label>
						<input class="form-control cpms-full-width" name="last-name-2" type="text">
					</div>
					<div class="form-group">
						<label class="form-label" for="last-name-2">Postcode</label>
						<input class="form-control" name="last-name-2" type="text">
					</div>
					{{ components.heading(text="We'll send your payment confirmation here:", tag='h3', size='small') }}
					<div class="form-group">
						<label class="form-label" for="last-name-2">Email</label>
						<input class="form-control cpms-full-width" name="last-name-2" type="text">
					</div>
					<input class="button" type="submit" value="Continue to payment">
				</form>
		</div>
    {%- endcall %}

    {% call components.columnOneThird() %}

    <aside class="govuk-related-items" role="complementary">
        <nav role="navigation" aria-labelledby="subsection-title">
          <ul class="font-xsmall">
            <li> {{ components.link(text='Portuguese', url='#') }} </li>
            <li> {{ components.link(text='Cymraeg', url='#') }} </li>
            <li> {{ components.link(text='Magyar', url='#') }} </li>
            <li> {{ components.link(text='Polski', url='#') }} </li>
            <li> {{ components.link(text='Français', url='#') }}</li>
            <li> {{ components.link(text='Latviešu', url='#') }} </li>
          </ul>
        </nav>
      </aside>
    {%- endcall %}

  {%- endcall %}
  
{% endblock %}
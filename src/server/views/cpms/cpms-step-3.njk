{% extends 'layouts/default.layout.njk' %}

{% set pageTitle = 'DVSA Road Side Payment Portal' %}

{% block content %}
  
  {% call components.gridRow() %}

    {% call components.columnTwoThirds() %}

      {{ components.heading(text='Pay a DVSA Penalty', tag='h1', size='xlarge') }}
			{{ components.heading(text="Make Payment", tag='h2', size='large') }}
			
			<div class="cpms-m-b-60">
					<h2 class="heading-small">Details</h2>
					<p>Please check that the details below are correct, before making payment.</p>
					<table>
						<thead>
							<tr>
								<th class="cpms-table-header" scope="col">Description</th>
								<th class="cpms-table-header" scope="col">Penalty Reference</th>
								<th class="cpms-table-header" scope="col">Amount</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<th scope="row" class="font-xsmall">{{ typeDescription }}</th>
								<td class="font-xsmall">{{ reference }}</td>
								<td class="font-xsmall">£{{ amount }}</td>
							</tr>
						</tbody>
					</table>

					

					<h2 class="heading-small">Card details</h2>
					<p>Please check that your card details are correct.</p>
					<table>
						<tbody>
							<tr>
								<th class="cpms-table-header" scope="row">Card number</th>
								<td style="text-align: center">{{ cardNumber }}</td>
							</tr>
							<tr>
								<th class="cpms-table-header" scope="row">Card holder</th>
								<td style="text-align: center">{{ cardHolderName }}</td>
							</tr>
							<tr>
								<th class="cpms-table-header" scope="row">Expiry date</th>
								<td style="text-align: center">{{ expMonth }}/{{ expYear }}</td>
							</tr>
						</tbody>
					</table>
					{% call components.form(action='/cpms-step-3', method='post') %}
						<input type="hidden" name="reference" value="{{ reference }}">
						<input type="hidden" name="type" value="{{ type }}">
						<input type="hidden" name="amount" value="{{ amount }}">
						<input type="hidden" name="paymentCode" value="{{ paymentCode }}">
					<div class="atf-m-t-20">
						{{ components.button(text='Make Payment', type='submit') }}
					</div>
				{%- endcall %}
			</div>
    {%- endcall %}

    {% call components.columnOneThird() %}

    <aside class="govuk-related-items" role="complementary">
        <nav role="navigation" aria-labelledby="subsection-title">
          <ul class="font-xsmall">
            <li> {{ components.link(text='Portuguese', url='#') }} </li>
            <li> {{ components.link(text='Cymraeg', url='#') }} </li>
            <li> {{ components.link(text='Magyar', url='#') }} </li>
            <li> {{ components.link(text='Polski', url='#') }} </li>
            <li> {{ components.link(text='Français', url='#') }}</li>
            <li> {{ components.link(text='Latviešu', url='#') }} </li>
          </ul>
        </nav>
      </aside>
    {%- endcall %}

  {%- endcall %}
  
{% endblock %}
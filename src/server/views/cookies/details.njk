{% extends 'layouts/base.layout.njk' %}

{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% set pageTitle = t.site_title %}
{% set pageBreadcrumbItems = [
  {
    text: t.breadcrumbs.home,
    href: '/'
  }, {
    text: t.breadcrumbs.cookie_details
  }
] %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="cookie-details">
        <h1 class="govuk-heading-xl">{{ t.cookie_details_page.title }}</h1>
        <p class="govuk-body">{{ t.cookie_details_page.cookies_text_definition }}</p>

        <h2 class="govuk-heading-m">{{ t.cookie_details_page.analytics_title }}</h2>
        <p class="govuk-body">{{ t.cookie_details_page.analytics_text }}</p>

        {{ govukInsetText({
          text: t.cookie_details_page.analytics_privacy
        }) }}

        <p class="govuk-body">{{ t.cookie_details_page.analytics_info }}</p>

        <ul class="govuk-list govuk-list--bullet">
          <li>{{ t.cookie_preferences_page.analytics_text_list_one }}</li>
          <li>{{ t.cookie_preferences_page.analytics_text_list_two }}</li>
          <li>{{ t.cookie_preferences_page.analytics_text_list_three }}</li>
        </ul>

        {{ govukTable({
          head: [
            { text: t.cookie_details_page.table_header_name },
            { text: t.cookie_details_page.table_header_purpose },
            { text: t.cookie_details_page.table_header_expires }
          ],
          rows: [
            [
              { text: t.cookie_details_page.analytics_cookie_name_one },
              { text: t.cookie_details_page.analytics_cookie_purpose_one },
              { text: t.cookie_details_page.analytics_cookie_expires_one }
            ],
            [
              { text: t.cookie_details_page.analytics_cookie_name_two },
              { text: t.cookie_details_page.analytics_cookie_purpose_two },
              { text: t.cookie_details_page.analytics_cookie_expires_two }
            ],
            [
              { text: t.cookie_details_page.analytics_cookie_name_three },
              { text: t.cookie_details_page.analytics_cookie_purpose_three },
              { text: t.cookie_details_page.analytics_cookie_expires_three }
            ]
          ]
        }) }}

        <h2 class="govuk-heading-m">{{ t.cookie_details_page.essential_cookies_title }}</h2>

        <h3 class="govuk-heading-s">{{ t.cookie_details_page.essential_cookies_language_title }}</h3>
        <p class="govuk-body">{{ t.cookie_details_page.essential_cookies_language_text }}</p>

        {{ govukTable({
          head: [
            { text: t.cookie_details_page.table_header_name },
            { text: t.cookie_details_page.table_header_purpose },
            { text: t.cookie_details_page.table_header_expires }
          ],
          rows: [
            [
              { text: t.cookie_details_page.language_cookie_name_one },
              { text: t.cookie_details_page.language_cookie_purpose_one },
              { text: t.cookie_details_page.language_cookie_expires_one }
            ]
          ]
        }) }}

        <h3 class="govuk-heading-s">{{ t.cookie_details_page.essential_cookies_banner_title }}</h3>
        <p class="govuk-body">{{ t.cookie_details_page.essential_cookies_banner_text }}</p>

        {{ govukTable({
          head: [
            { text: t.cookie_details_page.table_header_name },
            { text: t.cookie_details_page.table_header_purpose },
            { text: t.cookie_details_page.table_header_expires }
          ],
          rows: [
            [
              { text: t.cookie_details_page.cookie_preferences_cookie_name_one },
              { text: t.cookie_details_page.cookie_preferences_cookie_purpose_one },
              { text: t.cookie_details_page.cookie_preferences_cookie_expires_one }
            ]
          ]
        }) }}

        <h3 class="govuk-heading-m">{{ t.cookie_details_page.third_party_cookies_title }}</h3>
        <h3 class="govuk-heading-s">{{ t.cookie_details_page.imperva_incapsula_cookies_title }}</h3>
        <p class="govuk-body">{{ t.cookie_details_page.imperva_incapsula_cookies_text }}</p>

        {{ govukTable({
          head: [
            { text: t.cookie_details_page.table_header_name },
            { text: t.cookie_details_page.table_header_purpose },
            { text: t.cookie_details_page.table_header_expires }
          ],
          rows: [
            [
              { text: t.cookie_details_page.imperva_incapsula_cookies_name_one },
              { text: t.cookie_details_page.imperva_incapsula_cookie_purpose_one },
              { text: t.cookie_details_page.imperva_incapsula_cookie_expires_one }
            ],
            [
              { text: t.cookie_details_page.imperva_incapsula_cookies_name_two },
              { text: t.cookie_details_page.imperva_incapsula_cookie_purpose_two },
              { text: t.cookie_details_page.imperva_incapsula_cookie_expires_two }
            ],
            [
              { text: t.cookie_details_page.imperva_incapsula_cookies_name_three },
              { text: t.cookie_details_page.imperva_incapsula_cookie_purpose_three },
              { text: t.cookie_details_page.imperva_incapsula_cookie_expires_three }
            ]
          ]
        }) }}

        <h2 class="govuk-heading-m">{{ t.cookie_details_page.change_preferences_title }}</h2>
        <p class="govuk-body">{{ t.cookie_details_page.change_preferences_text }}</p>

      </div>
    </div>
  </div>
{% endblock %}

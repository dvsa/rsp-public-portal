    <div class="footer-meta">
      <div class="footer-meta-inner">
        <h2 class="visuallyhidden">Support links</h2>
        <ul>
          <li><a href="https://www.gov.uk/help/cookies">{{ t.footer.cookies }}</a></li>
          <li><a href="https://www.gov.uk/help/terms-conditions">{{ t.footer.terms_conditions }}</a></li>
          <li>{{ t.footer.built_by }} <a href="https://www.gov.uk/government/organisations/driver-and-vehicle-standards-agency">Driver &amp; Vehicle Standards Agency</a></li>
        </ul>
        <ul>
          <li>{{ components.link(text='French', url='/?clang=fr') if clang != 'fr' else components.link(text='English', url='/') }}</li>
          <li>{{ components.link(text='German', url='/?clang=de') if clang != 'de' else components.link(text='English', url='/') }}</li>
